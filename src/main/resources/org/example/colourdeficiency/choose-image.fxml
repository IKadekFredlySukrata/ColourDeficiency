<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>

<VBox xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.colourdeficiency.controller.ImageConverter" spacing="10" alignment="CENTER" style="-fx-padding: 20;">
    <Button text="Open Image" fx:id="openButton" />
    <Button text="Apply Protanopia" fx:id="protanButton" />
    <Button text="Apply Deuteranopia" fx:id="deutanButton" />
    <Button text="Apply Tritanopia" fx:id="tritanButton" />
    <Button text="Apply Achromatopsia" fx:id="achromaButton" />
    <ImageView fx:id="imageView" fitWidth="500" preserveRatio="true" />
</VBox>