<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.colourdeficiency.controller.SettingsController" prefWidth="400" prefHeight="300">
    <VBox spacing="15" alignment="CENTER" layoutX="50" layoutY="30" prefWidth="300" prefHeight="240" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="30">
        <Label text="Settings" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Resolution:"/>
            <ComboBox fx:id="resolutionComboBox" prefWidth="200"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Theme:"/>
            <ComboBox fx:id="themeComboBox" prefWidth="200"/>
        </HBox>

        <Button text="Back to Menu" onAction="#handleBackToMenu"/>
    </VBox>
</AnchorPane>
